{
  "manifest_version": 3,
  "name": "RTL for Deepseek & Genspark",
  "version": "1.0",
  "description": "Toggle RTL direction on chat.deepseek.com and genspark.site for better Persian/Arabic reading experience.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["*://*.deepseek.com/*", "*://*.genspark.site/*"],
  "action": {
    "default_icon": {
      "16": "icons/icon_rtl16.png",
      "48": "icons/icon_rtl16.png",
      "128": "icons/icon_rtl16.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon_rtl16.png",
    "48": "icons/icon_rtl16.png",
    "128": "icons/icon_rtl16.png"
  }
}
